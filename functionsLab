	$Authority_Name   =  e($_POST['Authority_Name']);
	$Date  			  =  date("Y-m-d");
	
	// form validation: ensure that the form is correctly filled
	if (empty($Patient_ID)) { 
		array_push($errors, "Sorry, this answer is required. If not applicable please write N/A."); 
	} 
	if (empty($Hemoglobin)) { 
		array_push($errors, "Sorry, this answer is required. If not applicable please write N/A."); 
	}
	if (empty($Blood_Grouping)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($Blood_Grouping_Others)) { 
		array_push($errors, "Sorry, this answer is required. If not applicable please write N/A."); 
	}
	if (empty($Lab_Test)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($Lab_Test_Results)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($Syphilis_Test_W)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($Syphilis_Test_P)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($TB_Status)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($Authority_Name)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}
	if (empty($Date)) { 
		array_push($errors, "Sorry, this answer is required."); 
	}

